{
  "name": "X Wallet",
  "description": "X Wallet Extension",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["app/background.js"]
  },
  "web_accessible_resources": ["app/script/inpage.js"],
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "app/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Open the popup",
    "default_popup": "index.html#popup",
    "default_icon": {
      "16": "favicon.png",
      "32": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "permissions": ["storage", "activeTab", "tabs", "webRequest", "notifications", "windows"],
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-5zVONp7lPHjr6C/GMJbk//woYq02HD6Y35wGIBQimCs='; object-src 'self'"
}
